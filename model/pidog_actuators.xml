<!--
  PiDog Actuator Definitions

  Servo Specifications: MG90S Metal Gear Servo (or similar 9g metal gear servo)
  - Torque: 0.176-0.216 Nm (1.8-2.2 kgf·cm at 4.8-6V)
  - Speed: 333-400°/s (5.8-7.0 rad/s)
  - No Load Speed: 4.8V: 60°/0.18sec, 6V: 60°/0.15sec
  - Operating voltage: 4.8-6.0V
  - Physical Range: 0-180° (0 to π radians)
  - Control Range: -90° to 180° (-π/2 to π radians) to match environment scaling

  Note: PiDog has 12 total servos (8 for legs, 1 for tail, 3 for head/neck)
  This file only defines the 8 leg servos used in locomotion.
-->

<mujoco>
    <actuator>
        <!--
        Using position servos with realistic constraints
        - ctrlrange: -π/2 to π radians (-90° to 180°) - matches environment's _scale_action
        - forcerange: ±0.216 Nm (max torque at 6V for MG90S)
        - gear: 1 (direct drive)

        Note: Velocity limiting is handled in the environment code
        to match the 7.0 rad/s max speed specification (400°/s at 6V)
        -->

        <!-- Back Right Leg -->
        <position name="back_right_hip_actuator"
                  joint="back_right_hip"
                  forcerange="-0.216 0.216"
                  kp="5.0"
                  kv="2.5"
                  gear="1"/>

        <position name="back_right_knee_actuator"
                  joint="back_right_knee"
                  forcerange="-0.216 0.216"
                  kp="5.0"
                  kv="2.5"
                  gear="1"/>

        <!-- Front Right Leg -->
        <position name="front_right_hip_actuator"
                  joint="front_right_hip"
                  forcerange="-0.216 0.216"
                  kp="5.0"
                  kv="2.5"
                  gear="1"/>

        <position name="front_right_knee_actuator"
                  joint="front_right_knee"
                  forcerange="-0.216 0.216"
                  kp="5.0"
                  kv="2.5"
                  gear="1"/>

        <!-- Back Left Leg -->
        <position name="back_left_hip_actuator"
                  joint="back_left_hip"
                  forcerange="-0.216 0.216"
                  kp="5.0"
                  kv="2.5"
                  gear="1"/>

        <position name="back_left_knee_actuator"
                  joint="back_left_knee"
                  forcerange="-0.216 0.216"
                  kp="5.0"
                  kv="2.5"
                  gear="1"/>

        <!-- Front Left Leg -->
        <position name="front_left_hip_actuator"
                  joint="front_left_hip"
                  forcerange="-0.216 0.216"
                  kp="5.0"
                  kv="2.5"
                  gear="1"/>

        <position name="front_left_knee_actuator"
                  joint="front_left_knee"
                  forcerange="-0.216 0.216"
                  kp="5.0"
                  kv="2.5"
                  gear="1"/>
    </actuator>
</mujoco>
